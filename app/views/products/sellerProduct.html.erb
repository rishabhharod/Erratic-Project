<% stylesheet_link_tag 'sellerProduct' %>
<header class="text-center mb-3">
  <h5>Product Details</h5>
</header>
<div class="mb-5">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>             
        <th scope="col">Description</th>
        <th scope="col">Price</th>
        <th scope="col">Discount</th>
        <th scope="col">Stock</th>
        <th scope="col">Seller ID</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <% @sellerProduct.each do |product| %>
    <tbody>
      <tr>
        <td scope="row"><%=product.id%></td>
        <td><%=product.name%></td>        
        <td><%=product.description %></td>   
        <td><%=product.price%></td>
        <td><%=product.discount.nil? ? 'no discount' : "#{product.discount}%"%></td>      
        <td><%=product.stock%></td>
        <td><%=product.seller_id%></td>
        <td><%=link_to edit_product_path(product),title:'Edit' do %>
          <i class="far fa-edit"></i>  
        <%end%></td>
        <td><%=link_to product_path(product),method: :delete,title:'Delete' do %>
          <i class="fa-solid fa-trash m-auto"></i>
        <%end%>
        </td>
      </tr>
    </body>
    <% end %>
  </table>
</div>
