<% stylesheet_link_tag 'sellerProduct' %>
<%= render partial: "home/navbar" %>
<div>
<table>
  <tr>
    <th>ID</th>
    <th>Name</th>             
    <th>Description</th>
    <th>Price</th>
    <th>Stock</th>
    <th>Seller ID</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
 <% @sellerProduct.each do |product| %>
  <tr>
    <td><%=product.id%></td>
    <td><%=product.name%></td>        
    <td><%=product.description %></td>   
    <td><%=product.price%></td>      
    <td><%=product.stock%></td>
    <td><%=product.seller_id%></td>
    <td><%=link_to "Edit", edit_product_path(product) %></td>
    <td><%=link_to "Delete", product_path(product), data:{
        turbo_method: :delete,
        turbo_confirm: "Are You Sure?"
    } %></td>
  </tr>
  <% end %>
 </table>
 </div>