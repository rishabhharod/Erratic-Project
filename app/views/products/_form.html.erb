<div class="container shadow-lg p-3 mb-5 bg-body rounded w-50">
  <div class="container py-2 bg-light">  
    <%= form_with model: @product, html:{multiple:true}  do |f| %> 

      <%= f.label :name, class:"form-label" %>:
      <%= f.text_field :name, class:"form-control",  required:"true", autofocus: true, autocomplete: "name" %><br />
    
      <%= f.label :description, class:"form-label" %>:
      <%= f.text_area :description, class:"form-control", required:"true", autofocus: true, autocomplete: "description" %><br />
    
      <%= f.label :price, class:"form-label" %>:
      <%= f.number_field :price, class:"form-control", required:"true", autofocus: true, autocomplete: "price" %><br />
      
      <%= f.label :discount, class:"form-label" %>:
      <%= f.number_field :discount, class:"form-control", autofocus: true, autocomplete: "discount" %><br />

      <%= f.label :stock, class:"form-label" %>:
      <%= f.number_field :stock,class:"form-control", required:"true", autofocus: true, autocomplete: "stock" %><br />
    
      <%= f.label :product_type, class:"form-label" %>:
      <%= f.text_field :product_type,class:"form-control", required:"true", autofocus: true, autocomplete: "product_type" %><br />
    
      <%= f.label :images, class:"form-label" %>
      <%= f.file_field :images, class:"form-control", required:"true", multiple: true %>
      <div class="row m-4">
        <%= f.submit 'SUBMIT', class:"btn btn-outline-success mx-auto w-50" %>
      </div>
    <% end %>
  </div>
</div>
