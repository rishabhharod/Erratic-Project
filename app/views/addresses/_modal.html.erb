<div id="address-modal-pop-up">
  <!-- Modal -->
  <div class="modal fade" id="addressModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg w-50">
      <%= form_with model: @address  do |f| %> 
        <%= f.hidden_field :order_id, value: '1' %>
        <%= f.hidden_field :is_checked, value: false %>
      <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="row g-3">
              <div class="col-12">
                <%= f.label :'Address', class:"form-label" %>
                <%= f.text_field :full_address,class:"form-control fw-light",autofocus: true, autocomplete: "full_address" %>
              </div>
              <div class="col-md-6">
                <%= f.label :City, class:"form-label" %>
                <%= f.text_field :city, class:"form-control fw-light", autofocus: true, autocomplete: "city" %>
              </div>
              <div class="col-md-6">
                <%= f.label :State,class:"form-label" %>
                <%= f.text_field :state, class:"form-control fw-light", autofocus: true, autocomplete: "state" %>
              </div>
              <div class="col-12">
                <%= f.label :Landmark, class:"form-label" %>
                <%= f.text_field :landmark, class:"form-control fw-light", autofocus: true, autocomplete: "landmark" %>
              </div>
              <div class="col-md-5">
                <%= f.label :pincode, class:"form-label" %>
                <%= f.number_field :pincode, class:"form-control fw-light", autofocus: true, autocomplete: "pincode" %>
              </div>
              <div class="col-md-4">
                <%= f.label :'Address Type', class:"form-label" %>
                <%= f.select :address_type, options_for_select([["Select One", ""], "Home", "Office", "Other"]), {}, class: "form-select" %>
              </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <%= f.submit 'Save changes', class:'btn btn-primary'%>
        </div>
      </div>
      <%end%>
    </div>
  </div>
</div>