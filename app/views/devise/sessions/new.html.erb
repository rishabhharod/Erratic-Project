<div class="container shadow-lg p-3 mb-5 bg-body rounded w-50">
  <header class="text-center mb-5">
    <h3>Log in</h3>
  </header>
  <section class="container">
    <div class="row g-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-floating mb-3">
          <%= f.email_field :email, class:"form-control", id:"floatingInput", placeholder:"email", required:"true", autofocus: true, autocomplete: "email" %>
          <%= f.label :email, for:"floatingInput" %><br />
        </div>
        <div class="form-floating mb-3">
          <%= f.password_field :password, class:"form-control", id:"floatingInput", placeholder:"password", required:"true",  autocomplete: "current-password" %>
          <%= f.label :password, for:"floatingInput" %><br />
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me, required:"true", class:"form-check-input"%>
            <%= f.label :remember_me, class:"form-check-label ms-2 fw-light"%>
          </div>
        <% end %>
        <div class=" d-flex mt-4">
          <%= f.submit "Log in", class:"btn btn-outline-success col-5 ms-4" %>
          <%= render "devise/shared/links" %>
        </div>
        <div class="mt-3">
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class:"fw-bolder" %><br />
          <% end %>
        </div>
      <% end %>
    </div>
  </section>
</div>