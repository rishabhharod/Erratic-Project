<div class="container shadow-lg p-3 mb-5 bg-body rounded w-50">
  <section class="container ">
    <header class="text-center mb-5">
      <h2>Sign up</h2>
    </header>  
    <div class="row g-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-floating mb-3">
          <%= f.text_field :name, class:"form-control", id:"floatingInput", placeholder:"name", required:"true", autofocus: true, autocomplete: "name" %>
          <%= f.label :name, for:"floatingInput" %>
        </div>

        <div class="form-floating mb-3">
          <%= f.email_field :email,  class:"form-control", id:"floatingInput", placeholder:"name@gmail.com", required:"true", autofocus: true, autocomplete: "email" %>
          <%= f.label :email, for:"floatingInput" %><br />
        </div>

        <%= f.label :gender, class:"form-check-label" %>
        <div class="form-check d-flex mb-3">
          <div class="form-check col-2">
            <%= f.radio_button :gender, "male", class:"form-check-input" %>
            <%= label_tag("Male") %>
          </div>
          <div class="form-check col-2">
            <%= f.radio_button :gender, "female", class:"form-check-input" %>
            <%= label_tag("Female") %>
          </div>
        </div>
        
        <div class="form-floating mb-3">
          <%= f.number_field :contact, class:"form-control", id:"floatingInput", placeholder:"contact", required:"true", autofocus: true, autocomplete: "contact" %>
          <%= f.label :contact, for:"floatingInput" %>
        </div>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        <div class="form-floating mb-3">
          <%= f.password_field :password,  class:"form-control", id:"floatingInput", placeholder:"password", required:"true", autocomplete: "new-password" %>
          <%= f.label :password, for:"floatingInput" %>
        </div>

        <div class="form-floating mb-3">
          <%= f.password_field :password_confirmation, class:"form-control", id:"floatingInput", placeholder:"c-password", required:"true", autocomplete: "new-password" %>
          <%= f.label :password_confirmation, for:"floatingInput" %><br />
        </div>

        <div class="d-flex">
          <%= f.submit "Sign up", class:"btn btn-outline-success col-5 ms-4" %>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </section>
</div>
