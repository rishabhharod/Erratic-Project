<div class="container" >
  <section class="container w-50">
    <header class="text-center mb-5">
      <h2>Sign up</h2>
    </header>  
    <div class="row g-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-floating mb-3">
          <%= f.text_field :name, class:"form-control", id:"floatingInput", placeholder:"name", autofocus: true, autocomplete: "name" %>
          <%= f.label :name, for:"floatingInput" %>
        </div>

        <div class="form-floating mb-3">
          <%= f.email_field :email,  class:"form-control", id:"floatingInput", placeholder:"name@gmail.com", autofocus: true, autocomplete: "email" %>
          <%= f.label :email, for:"floatingInput" %><br />
        </div>
        
        <div class="field">
          <%= f.label :gender %><br />
          <%= f.radio_button :gender, "male" %>
          <%= label_tag("Male") %>
          <%= f.radio_button :gender, "female" %>
          <%= label_tag("Female") %>
        </div>
        
        <div class="form-floating mb-3">
          <%= f.number_field :contact, class:"form-control", id:"floatingInput", placeholder:"contact", autofocus: true, autocomplete: "contact" %>
          <%= f.label :contact, for:"floatingInput" %>
        </div>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        <div class="form-floating mb-3">
          <%= f.password_field :password,  class:"form-control", id:"floatingInput", placeholder:"password", autocomplete: "new-password" %>
          <%= f.label :password, for:"floatingInput" %>
        </div>

        <div class="form-floating mb-3">
          <%= f.password_field :password_confirmation, class:"form-control", id:"floatingInput", placeholder:"c-password", autocomplete: "new-password" %>
          <%= f.label :password_confirmation, for:"floatingInput" %><br />
        </div>

        <div class="col-12 d-flex">
          <%= f.submit "Sign up", class:"btn btn-outline-success col-5 ms-4" %>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </section>
</div>